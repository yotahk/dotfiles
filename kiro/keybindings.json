// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "-workbench.action.quickOpenLeastRecentlyUsedEditorInGroup",
        "when": "!activeEditorGroupEmpty"
    },
    {
        "key": "ctrl+tab",
        "command": "-workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
        "when": "!activeEditorGroupEmpty"
    },
    {
        "key": "shift+cmd+]",
        "command": "-workbench.action.nextEditor"
    },
    {
        "key": "shift+cmd+[",
        "command": "-workbench.action.previousEditor"
    },
    {
        "key": "space ctrl",
        "command": "aws.amazonq.invokeInlineCompletion",
        "when": "aws.codewhisperer.connected && editorTextFocus"
    },
    // edit inline
    {
        "key": "cmd+k",
        "command": "kiroAgent.inlineChat.start"
    },
    // open chat. focus on text input
    {
        "key": "cmd+l",
        "command": "kiroAgent.focusContinueInputWithoutClear"
    },
    // new chat
    {
        "key": "shift+cmd+l",
        "command": "kiroAgent.focusContinueInput"
    },
    // toggle (close) chat. not using this command for opening chat since it doesn't focus to text input
    {
        "key": "cmd+l",
        "command": "workbench.action.toggleAuxiliaryBar",
        "when": "auxiliaryBarVisible && !editorFocus"
    },
    // TODO: figure out how to close each chats
]
